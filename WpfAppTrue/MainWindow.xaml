<Window x:Class="WpfAppTrue.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTrue"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBox x:Name="loginTb" Width="250"/>
            <TextBox x:Name="passwordPb" Width="250"/>
            <Button Width="200" Content="Войти" Click="SignIn"/>
            <CheckBox IsChecked="True" x:Name="rememberChb" Content="Запомни меня" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
